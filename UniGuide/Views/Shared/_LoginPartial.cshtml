@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm(@Resources.Resources.logout, "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(@Resources.Resources.register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(@Resources.Resources.login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    <li class="dropdown"> 
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
        @Resources.Resources.ChooseYourLanguage
            <span class="caret"></span>
            </a>
        <ul class="dropdown-menu" role="menu">
            <li>
                <a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "en-us" :  r.Value)))">
                    <img src="~/Images/USflg.png" alt="English"  style="width :24px; height:24px;"/> English
                </a>
            </li>
            <li>
                <a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "ar" :  r.Value)))">
                    <img src="~/Images/SDNflg.png" alt="العربية" style="width :24px; height:24px;" /> العربية
                </a>
            </li>
            <li>
                <a href="@Url.RouteUrl(new RouteValueDictionary(ViewContext.RouteData.Values.ToDictionary(r => r.Key, r => r.Key == "culture" ? "es" :  r.Value)))">
                    <img src="~/Images/FRflg.png" alt="français" style="width :24px; height:24px;" /> français
                </a>
            </li>
        </ul>
    </li>
</ul>
}
