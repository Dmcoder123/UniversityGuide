@{
    ViewBag.Title = @Resources.Resources.searchmyFuture;
}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">@Resources.Resources.searchmyFuture</div>
        <div class="panel-body">
            <div class="col-md-12" id="searchFuture">
                <div class="jumbotron">
                    <p>@Resources.Resources.whythisapp</p>
                    <a href="http://elmozamil.blogspot.com" class="btn btn-primary btn-lg">@Resources.Resources.learnMore »</a>
                </div>
                <div class="row">
                    <div class="col-md-8">
                            <img src="~/Images/b.jpg" class="img-rounded" style="width:100%;"/>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.DropDownList("Categroy", null, htmlAttributes: new { @class = "form-control", style="margin: 3px;", id="catlst" })
                                @Html.DropDownList("Dicipline", null, htmlAttributes: new { @class = "form-control", style = "margin: 3px;", id = "diplst" })
                                @Html.DropDownList("Years", null, htmlAttributes: new { @class = "form-control", style = "margin: 3px;", id = "yearslst" })
                                <span>
                                    <button value="Search" id="searchCat" class="btn btn-success" style="margin: 3px;">@Resources.Resources.search</button>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.DropDownList("Degree", null, htmlAttributes: new { @class = "form-control", style = "margin: 3px;", id = "degreelst" })
                                @Html.DropDownList("AdmissionType", null, htmlAttributes: new { @class = "form-control", style = "margin: 3px;", id = "admissionlst" })
                                @Html.DropDownList("City", null, htmlAttributes: new { @class = "form-control", style="margin: 3px;", id="citylst" })
                                <span>
                                    <button value="Search" id="searchDegree" class="btn btn-success" style="margin: 3px;">@Resources.Resources.search</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
        </div>
    </div>
</div>
